<%- include('partials/header'); %> <%# Include the header partial %>

<%# --- Page Specific Content Starts Here --- %>

<h1><%= typeof title !== 'undefined' ? title : 'Login' %></h1>

<%# Check if an error message exists and display it %>
<% if (typeof error !== 'undefined' && error) { %>
    <p class="error-message"><%= error %></p>
<% } %>

<form action="/auth/login" method="POST">
    <div class="form-group">
        <label for="identifier">Username or Email:</label>
        <%# Pre-fill identifier if formData exists (e.g., after validation error) %>
        <input type="text" id="identifier" name="identifier" value="<%= typeof formData !== 'undefined' ? formData.identifier : '' %>" required>
    </div>
    <div class="form-group">
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required>
    </div>
    <button type="submit">Login</button>
</form>

<p>Don't have an account? <a href="/auth/register">Register here</a></p>

<%# --- Page Specific Content Ends Here --- %>

<%- include('partials/footer'); %> <%# Include the footer partial %>
