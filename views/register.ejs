<%- include('partials/header'); %> <%# Include the header partial %>

<%# --- Page Specific Content Starts Here --- %>

<h1><%= typeof title !== 'undefined' ? title : 'Register' %></h1>

<%# Check if an error message exists and display it %>
<% if (typeof error !== 'undefined' && error) { %>
    <p class="error-message"><%= error %></p>
<% } %>

<form action="/auth/register" method="POST">
    <div class="form-group">
        <label for="username">Username:</label>
        <%# Pre-fill username if formData exists (e.g., after validation error) %>
        <input type="text" id="username" name="username" value="<%= typeof formData !== 'undefined' ? formData.username : '' %>" required>
    </div>
    <div class="form-group">
        <label for="email">Email:</label>
        <%# Pre-fill email if formData exists %>
        <input type="email" id="email" name="email" value="<%= typeof formData !== 'undefined' ? formData.email : '' %>" required>
    </div>
    <div class="form-group">
        <label for="password">Password:</label>
        <%# Do NOT pre-fill password fields %>
        <input type="password" id="password" name="password" required>
    </div>
    <div class="form-group">
        <label for="passwordConfirm">Confirm Password:</label>
        <input type="password" id="passwordConfirm" name="passwordConfirm" required>
    </div>
    <button type="submit">Register</button>
</form>

<p>Already have an account? <a href="/auth/login">Login here</a></p>

<%# --- Page Specific Content Ends Here --- %>

<%- include('partials/footer'); %> <%# Include the footer partial %>
